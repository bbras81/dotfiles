foreground = #f2cdcd
foreground-alt = #f5e0dc
primary = #cba6f7
secondary = #f5c2e7
alert = #f38ba8
disabled = #cdd6f4

[bar/mainbar]
width = 100%
height = 20pt
radius = 6

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.primary}
border-size = 0pt
border-color = #00000000

padding-left = 0
padding-right = 1

