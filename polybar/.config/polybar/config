secondary = #f5c2e7
alert = #f38ba8
disabled = #cdd6f4

[bar/mainbar]
width = 100%
height = 22pt
radius = 6

; dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #cba6f7
